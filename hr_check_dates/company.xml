<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_hr_employee_form" model="ir.ui.view">
        <field name="name">res.company.hr.employee.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page" position="after">
                <page string="HR Employees">
                    <field name="hr_employee_ids">
                        <tree string="HR Employees" editable="bottom">
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

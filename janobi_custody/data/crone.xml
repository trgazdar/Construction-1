<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron for send notification to employee for custody -->
        <record id="ir_cron_check_custody" forcecreate="True" model="ir.cron">
            <field name="name">Custody: Check Custody date</field>
            <field name="model_id" ref="model_custody_custody"/>
            <field name="state">code</field>
            <field name="code">model.check_date()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 00:00:05')" />
            <field eval="False" name="doall" />
        </record>
    </data>
</odoo>

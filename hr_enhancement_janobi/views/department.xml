<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_department_janobi_view_form" model="ir.ui.view">
        <field name="name">hr.department.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="disclaimer" string="اخلاء طرف" />
            </xpath>

            <xpath expr="//field[@name='manager_id']" position="attributes">
                <attribute name="attrs">{'required':[('disclaimer','=',True)]}</attribute>
            </xpath>


        </field>
    </record>
</odoo>